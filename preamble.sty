% Fundamental packages
\usepackage[utf8]{inputenc} % standard english symbols
\usepackage[english]{babel} % set appropreate language
\usepackage[top=1.3in,bottom=1.3in,right=1.3in,left=1.3in]{geometry} % page setup
\usepackage[style=ieee]{biblatex}

% General packages
\usepackage{subcaption} % caption for subfigures
\usepackage{hyperref} % for hyper text link
\usepackage{booktabs} % enhaned tables
\usepackage{xcolor} % tints, shades, tones, and a mixes of arbitrary colors
\usepackage{colortbl} % coloring for tables

% Images packages
\usepackage{graphicx} % for inserting images
\usepackage{float} % for image position H
\usepackage{svg} % for including svg images

% Math packages
\usepackage{amsmath} % general math package
